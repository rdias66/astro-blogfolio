---
import Snippet from '../components/ui/Snippet.astro'
import BaseLayout from '../layouts/BaseLayout.astro'
import HomeLayout from '../layouts/HomeLayout.astro'
const link = 'https://rdias-portfolio.vercel.app'
const status = 'Meu novo portfolio/blog esta sob construção'
const description =
  'Enquanto isso, visite meu portfolio em funcionamento desenvolvido em Nextjs no link abaixo!'
---

<BaseLayout>
  <HomeLayout>
    <h1>{status}</h1>
    <code>{description}</code>
    <Snippet link={link} />
  </HomeLayout>
</BaseLayout>
