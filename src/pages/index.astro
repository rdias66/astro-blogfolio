---
import LeftContentLayout from '../layouts/LeftContentLayout.astro'
import RightContentLayout from '../layouts/RightContentLayout.astro'
import BaseLayout from '../layouts/BaseLayout.astro'
import HomeLayout from '../layouts/HomeLayout.astro'
import Brief from '../components/ui/Brief.astro'
import Navigation from '../components/ui/Navigation.astro'
import Socials from '../components/general/Socials.astro'
import Intro from '../components/home/Intro.astro'
import Projects from '../components/home/Projects.astro'
import Blog from '../components/home/Blog.astro'
import Contact from '../components/home/Contact.astro'
---

<BaseLayout>
  <HomeLayout>
    <LeftContentLayout slot="left">
      <Brief slot="brief" />
      <Navigation slot="navigation" />
      <Socials slot="socials" />
    </LeftContentLayout>
    <RightContentLayout slot="right">
      <Intro slot="about" />
      <Projects slot="projects" />
      <Blog slot="blog" />
      <Contact slot="contact" />
    </RightContentLayout>
  </HomeLayout>
</BaseLayout>
