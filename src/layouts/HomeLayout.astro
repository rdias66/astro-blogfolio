---
import '../components/Header.astro'
import '../components/Footer.astro'
---

<main class="home-layout">
  <div class="content-wrapper">
    <slot />
  </div>
</main>

<style>
  .home-layout {
    min-height: calc(100vh - 120px);
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    padding: 1rem;
    text-align: center;
    max-width: var(--max-content-width, 800px);
    margin: 0 auto;
  }

  .content-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
  }

  @media (max-width: 768px) {
    .home-layout {
      padding: 1rem;
    }
  }
</style>
