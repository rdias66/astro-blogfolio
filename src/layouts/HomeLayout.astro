---
// HomeLayout.astro
---

<main class="home-layout">
  <div class="left-content">
    <slot name="left" />
  </div>
  <div class="right-content">
    <slot name="right" />
  </div>
</main>

<style>
  .home-layout {
    display: flex;
    height: 100vh;
    position: relative;
    overflow: hidden;
  }

  .left-content {
    width: 20%; /* Adjust according to the desired width */
    position: fixed;
    top: 0;
    left: 0;
    height: 100vh;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-color: var(--background-color, #0a192f);
    text-align: left;
  }

  .right-content {
    width: 80%;
    margin-left: 20%; /* Matches the width of the left-content */
    padding: 2rem;
    height: 100vh;
    overflow-y: scroll;
    scroll-behavior: smooth;
  }

  @media (max-width: 768px) {
    .home-layout {
      flex-direction: column;
    }
    .left-content {
      width: 100%;
      height: auto;
      position: relative;
    }
    .right-content {
      margin-left: 0;
      width: 100%;
    }
  }
</style>
