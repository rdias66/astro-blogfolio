  }

  @keyframes shiny {
    0% {
      background-position: 0%;
    }
    100% {
      background-position: 100%;
    }
  }

  @keyframes colorChange {
    0% {
      color: #f72585;
    }
    20% {
      color: #7209b7;
    }
    40% {
      color: #0ca364;
    }
    60% {
      color: #4361ee;
    }
    80% {
