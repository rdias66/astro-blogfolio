---
import TechBadge from './TechBadge.astro'

const {
  projectTitle,
  projectDescription,
  techStack,
  liveLink,
  githubLink,
  projectImage,
} = Astro.props
---

<div class="project-card">
  <div class="image-section">
    <img src={projectImage} alt={projectTitle} />
  </div>
  <div class="content-section">
    <h3 class="project-title">{projectTitle}</h3>
    <p class="project-description">{projectDescription}</p>
    <div class="tech-stack">
      {techStack.map((tech) => <TechBadge techName={tech} />)}
    </div>
    <div class="links">
      {
        githubLink && (
          <a href={githubLink} target="_blank" rel="noopener noreferrer">
            GitHub
          </a>
        )
      }
      {
        liveLink && (
          <a href={liveLink} target="_blank" rel="noopener noreferrer">
            Live Site
          </a>
        )
      }
    </div>
  </div>
</div>

<style>
  .project-card {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 90%;
    margin: 1rem auto;
    padding: 1.5rem;
    background-color: #1e293b; /* Dark background for card */
    border-radius: 0.5rem;
    box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.1); /* Subtle shadow */
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    color: #f8fafc; /* Light text color */
  }

  .project-card:hover {
    transform: translateY(-0.5rem);
    box-shadow: 0px 12px 24px rgba(0, 0, 0, 0.2); /* Lift on hover */
  }

  .image-section {
    flex: 1;
    max-width: 30%;
  }

  .image-section img {
    width: 100%;
    height: auto;
    border-radius: 0.5rem;
  }

  .content-section {
    flex: 2;
    padding-left: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .project-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #f8fafc; /* Light title */
  }

  .project-description {
    font-size: 1rem;
    line-height: 1.6;
    color: #d1d5db; /* Subtle text */
  }

  .tech-stack {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech {
    background-color: #0f172a;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
  }

  .links {
    display: flex;
    gap: 1rem;
  }

  .links a {
    color: #38bdf8; /* Link color */
    text-decoration: none;
  }

  .links a:hover {
    text-decoration: underline;
  }
</style>
