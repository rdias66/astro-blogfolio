<style>
  .nav-links {
    display: flex;
    flex-direction: column;
    padding: 1rem;
    margin-left: 0.2rem;
  }

  .nav-link {
    color: white;
    text-decoration: none;
    padding: 0.5rem 0;
    position: relative;
    transition:
      color 0.3s ease,
      transform 0.3s ease;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    right: -25px;
    top: 50%;
    transform: translateY(-50%);
    width: 5px;
    height: 2px;
    background-color: white;
    transition:
      width 0.3s ease,
      right 0.3s ease;
  }

  .nav-link:hover::after,
  .nav-link:focus::after {
    width: 30px;
    right: -35px;
    background-color: #ff6666;
  }

  .nav-link:hover {
    color: #ff6666;
    transform: translateX(-10px);
  }

  .nav-link.active {
    color: #ff6666;
    transform: translateX(-10px);
  }

  .nav-link.active::after {
    width: 30px;
    right: -35px;
    background-color: #ff6666;
  }
</style>
