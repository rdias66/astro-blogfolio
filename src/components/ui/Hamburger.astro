---
const { class: customClass } = Astro.props
---

<button
  class={`hamburger-button ${customClass}`}
  aria-label="Toggle navigation"
>
  <span class="bar"></span>
  <span class="bar"></span>
  <span class="bar"></span>
</button>

<style>
  .hamburger-button {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .bar {
    width: 25px;
    height: 2px;
    background-color: rgb(100, 94, 94);
    transition: all 0.3s ease;
  }
</style>
