---
import Hamburger from './ui/Hamburger.astro'
import Search from './ui/Search.astro'
import Socials from './Socials.astro'
---

<header class="header-nav">
  <Hamburger class="hamburger" />
  <Search />
  <Socials class="socials" />
</header>

<style>
  .header-nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background-color: #262626;
    display: flex;
    align-items: center;
    padding: 1.5rem;
    z-index: 10;
    justify-content: space-between;
    max-height: 3rem;
  }

  .socials {
    display: flex;
    gap: 1rem;
  }
</style>
